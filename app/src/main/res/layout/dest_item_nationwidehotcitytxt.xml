<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/dimension_five_dp"
        android:layout_toLeftOf="@+id/dest_fit_item"
        android:src="@drawable/detail_title_left_line" />

    <TextView
        android:id="@+id/dest_fit_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/hot_city"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_14_sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimension_five_dp"
        android:layout_toRightOf="@+id/dest_fit_item"
        android:src="@drawable/detail_title_right_line" />


</RelativeLayout>