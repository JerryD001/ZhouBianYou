<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_scrollFlags="scroll">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="@dimen/dimension_ten_dp">
        <TextView
            android:id="@+id/hot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门推荐"/>
        <View
            android:id="@+id/hot_line"
            android:layout_width="0.2dp"
            android:layout_height="wrap_content"
            android:background="@color/guide_lastpage3_bg"
            android:layout_toRightOf="@id/hot_title"
            android:layout_marginLeft="@dimen/dimension_fifteen_dp"
            />
        <TextView
            android:id="@+id/hot_contant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="汇集超值玩点，更多优惠"
            android:layout_toRightOf="@id/hot_line"
            android:layout_marginLeft="@dimen/dimension_fifteen_dp"
            />
        <LinearLayout
            android:id="@+id/home_appbar_hot_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:text="更多"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_more_icon"
                />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/home_appbar_hot_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_margin="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/guide_lastpage3_bg"/>

</LinearLayout>