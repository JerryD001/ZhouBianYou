<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--自定义轻量级指示器-->
    <com.example.xm.zhoubianyouofour.utils.other.customindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_forty_dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimension_forty_dp"
        app:ci_background="@color/ic_page_indicator"
        app:ci_gravity="center"
        app:ci_margin="@dimen/dimension_five_dp"
        app:ci_mode="outside"
        app:ci_radius="@dimen/dimension_ten_dp"
        app:ci_selected_background="@color/burlywood" />

    <Button
        android:id="@+id/from_guide_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/guide_page_btn"
        android:layout_centerHorizontal="true"
        android:text="@string/guide_btn"
        android:textColor="@color/goldenrod"
        android:textSize="@dimen/text_size_16_sp"
        android:visibility="invisible" />

</RelativeLayout>
