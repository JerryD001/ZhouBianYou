<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/find_bottomimg"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/bottom_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/lightgreen"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bottom_bigtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在海陵之角 放一个发呆假"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_24_sp" />

        <TextView
            android:id="@+id/bottom_smalltv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimension_twenty_dp"
            android:text="发现海岛第三期：海陵岛"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15_sp" />
    </LinearLayout>


</RelativeLayout>