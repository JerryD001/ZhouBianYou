<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/three"/>
        <TextView
            android:id="@+id/mine_price"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="90dp"
            android:textColor="@color/bg_fragment"
            android:textSize="@dimen/text_size_14_sp"
            android:text="￥680起"/>

        <TextView
            android:id="@+id/mine_details"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="14dp"
            android:textSize="@dimen/text_size_14_sp"
            android:text="麦鲁小城门票-梦想小城，奇幻小城"/>

        <TextView
            android:id="@+id/mine_judge"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="14dp"
            android:textSize="12sp"
            android:text="好评85%"/>


        <TextView
            android:id="@+id/mine_location"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/home_list_location_tag"
            android:textSize="12sp"
            android:gravity="center"
            android:text="        深圳"/>

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/six"/>
            <TextView
                android:id="@+id/single_recyclerView_cardviewone_text"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="90dp"
                android:textColor="@color/bg_fragment"
                android:textSize="@dimen/text_size_14_sp"
                android:text="￥1380起"/>

            <TextView
                android:id="@+id/single_recyclerView_cardviewone_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:lines="2"
                android:ellipsize="end"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="14dp"
                android:textSize="@dimen/text_size_14_sp"
                android:text="麦鲁小城门票-梦想小城，奇幻小城"/>

            <TextView
                android:id="@+id/mine_judge2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:lines="2"
                android:ellipsize="end"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="14dp"
                android:textSize="12sp"
                android:text="好评85%"/>


            <TextView
                android:id="@+id/mine_location2"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/home_list_location_tag"
                android:textSize="12sp"
                android:gravity="center"
                android:text="        深圳"/>

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>