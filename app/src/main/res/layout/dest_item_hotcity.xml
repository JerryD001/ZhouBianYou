<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="@dimen/dimension_one_dp"
    android:layout_marginRight="@dimen/dimension_one_dp"
    app:cardBackgroundColor="@color/mediumturquoise"
    app:cardElevation="@dimen/dimension_two_dp"
    app:cardMaxElevation="@dimen/dimension_three_dp"
    app:cardCornerRadius="@dimen/dimension_two_dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dest_img_hot_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/dest_name_huocity_cn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="桂林"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16_sp" />

        <TextView
            android:id="@+id/dest_name_huocity_pinyin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dest_name_huocity_cn"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dimension_three_dp"
            android:text="GuiLin"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16_sp"
            android:textStyle="bold" />

    </RelativeLayout>


</android.support.v7.widget.CardView>