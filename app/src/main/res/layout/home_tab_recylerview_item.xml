<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/recyclerview_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/recyclerview_price"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/scan_mask"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/recyclerview_contant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_margin="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:id="@+id/recyclerview_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/textview_radius"
            android:text="  推荐  "
            android:visibility="gone"/>
        <TextView
            android:id="@+id/recyclerview_stateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/textview_radius_green"
            android:layout_toRightOf="@id/recyclerview_recommend"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/recyclerview_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:gravity="center"
            android:background="@drawable/textview_radius_grey"
            android:layout_toRightOf="@id/recyclerview_stateText"
            android:layout_marginLeft="5dp"
            android:text="深圳"
            />
        <TextView
            android:id="@+id/recyclerview_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:gravity="center"
            android:background="@drawable/textview_radius_grey"
            android:layout_toRightOf="@id/recyclerview_city"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/recyclerview_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>